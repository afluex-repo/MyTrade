@model MyTrade.Models.Master

@{
    ViewBag.Title = "RewardMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/plugins/flatpickr/flatpickr.css" rel="stylesheet" type="text/css">
<link href="~/plugins/flatpickr/custom-flatpickr.css" rel="stylesheet" type="text/css">
@using (Html.BeginForm("RewardMaster", "Master", FormMethod.Post, new { @id = "form", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Reward Master
                                    <a href="/Master/RewardMasterList" class="btn btn-primary float-right">Back to List</a>
                                </h4>
                                
                                <span class="text-danger">
                                    @TempData["Reward"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-lg-4 col-md-3">
                                <div class="form-group">
                                    <label>Reward Name<span style="color:red">*</span></label>
                                    @Html.TextBoxFor(m=> m.RewardName, new { @class = "form-control", @Placeholder = "Reward Name" })
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-3">
                                <div class="form-group">
                                    <label> From Date</label>
                                    @Html.TextBoxFor(m=> m.FromDate, new { @class = "form-control", @Placeholder = "dd/mm/yyyy" })
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-3">
                                <div class="form-group">
                                    <label>To Date</label>
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "dd/mm/yyyy" })
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-3">
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success" id="save" name="save" value="Save" onclick="return Validationform();"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/plugins/flatpickr/flatpickr.js"></script>
<script src="~/plugins/flatpickr/custom-flatpickr.js"></script>
<script>
    var f3 = flatpickr(document.getElementById('FromDate'),
        {
            // mode: "range"
        });
    var f3 = flatpickr(document.getElementById('ToDate'),
        {
            // mode: "range"
        });

</script>
<script>
    function Validationform(){
        debugger;

        $("#divload").css({ 'display': 'none' });
        $(".errortext").removeClass('errortext');

        if ($("#RewardName").val() == '') {
            $("#RewardName").addClass('errortext');
            $("#RewardName").focus();
            return false;
        }
    }
</script>
<style>
    .errortext{
        border:2px solid red;
        background:#f3bcbc!important;
    }
</style>







