@model MyTrade.Models.Admin

@{
    ViewBag.Title = "PayoutDetailForAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/plugins/flatpickr/flatpickr.css" rel="stylesheet" type="text/css">
<link href="~/plugins/flatpickr/custom-flatpickr.css" rel="stylesheet" type="text/css">

@using (Html.BeginForm("PayoutDetailForAdmin", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Payout Details</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-lg-3 col-md-3" style="margin-left:10px">
                                <div class="form-group">
                                    <label>
                                        From Date
                                    </label>
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date" })

                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3">
                                <div class="form-group">
                                    <label> To Date</label>
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date" })

                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3" style="margin-top:28px">
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success" value="Search" name="btnSearch" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <table id="html5-extension" class="table table-hover non-hover">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Closing Date</th>
                                        <th>Payout No</th>
                                        <th>Level Income TTP</th>
                                        <th>Level Income TPS</th>
                                        <th>Gross Amount</th>
                                        <th>TDS Amount</th>
                                        <th>Processing Fee</th>
                                        <th>Net Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstPayout != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstPayout)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.ClosingDate</td>
                                                    <td>@Item.PayoutNo</td>
                                                    <td>@Item.LevelIncomeTR1</td>
                                                    <td>@Item.LevelIncomeTR2</td>
                                                    <td><a href="#" class="td-content product-brand text-danger" onclick="Open('@Item.Fk_UserId');">@Item.GrossAmount</a></td>
                                                    <td>@Item.TDSAmount</td>
                                                    <td>@Item.ProcessingFee</td>
                                                    <td>@Item.NetAmount</td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModal" role="dialog"  data-backdrop="static" style="display: none;padding-top:55px;">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Payout Details</h6>
                    <button type="button" class="close" data-dismiss="modal" onclick="closeModal();">&times;</button>

                </div>
                <div class="modal-body" style="color: black">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel-body table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="tblData">
                                    <thead>
                                        <tr>
                                            <th>Payout No</th>
                                            <th>Closing Date</th>
                                            <th>Net Payable Amount</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal" onclick="closeModal();">Close</button>
                    </div>*@
            </div>

        </div>
    </div>
    @Html.HiddenFor(m => m.Fk_UserId)
}
<script src="~/plugins/flatpickr/flatpickr.js"></script>
<script src="~/plugins/flatpickr/custom-flatpickr.js"></script>
<script>
    var f3 = flatpickr(document.getElementById('FromDate'), {
        mode: "range"
    });
    var f4 = flatpickr(document.getElementById('ToDate'), {
        mode: "range"
    });
    function closeModal() {
        $("#myModal").hide();
        location.reload();
        //$('body').removeClass().removeAttr('style'); $('.modal-backdrop').remove();
    }
    function Open(Fk_UserId) {
        $("#Fk_UserId").val(Fk_UserId);
        $(".errortext").removeClass("errortext");
        //$("#divload").css({ 'display': '' });
        $.ajax({
            url: "/Admin/GetPayoutReportforAmount",
            Type: "Get",
            DataType: "JSON",
            data: { Fk_UserId: $("#Fk_UserId").val() },
            success: function (data) {
                console.log(data)
                $('#tblData').find("tr:not(:first)").remove();
                if (data.lsttopupreport.length > 0) {
                    for (var i = 0; i < data.lsttopupreport.length; i++) {
                        $("#tblData").append('<tr><td id="PayoutNo' + i + ' " >' + data.lsttopupreport[i].PayoutNo +
                            '</td><td id="ClosingDate' + i + ' " >' + data.lsttopupreport[i].ClosingDate +
                             '</td><td id="NetAmount' + i + ' " >' + data.lsttopupreport[i].NetAmount +
                            '</td></tr>')
                    }
                    //$.noConflict();
                    $("#myModal").modal('show');
                }
            }
        });

    }
</script>




