@model MyTrade.Models.Admin

@{
    ViewBag.Title = "UnUsedPinList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UnUsedPinList", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>UnUsed Pin List</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        @*<div class="row">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>Owner ID </label>
                                        @Html.TextBoxFor(m => m.OwnerID, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>Registered To ID </label>
                                        @Html.TextBoxFor(m => m.RegisteredTo, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>ePinNo </label>
                                        @Html.TextBoxFor(m => m.ePinNo, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>Package  </label>
                                        @Html.DropDownListFor(m => m.Package, new SelectList(ViewBag.ddlProduct, "Value", "Text"), new { @class = "form-control", @onchange = "FillAmount();" })
                                    </div>
                                </div>

                            </div>
                            <div class="row">

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <br />
                                        <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" />
                                    </div>
                                </div>
                            </div>*@
                        <div class="widget-content widget-content-area br-6">
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Login Id</th>
                                        <th>Name</th>
                                        <th>Package</th>
                                        <th>Available Pin</th>
                                        <th>Used Pin</th>
                                        <th>Transfer Pin</th>
                                        <th>Total Pin</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstView != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstView)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.Name</td>
                                                    <td> @Item.Package</td>
                                                    <td>@Item.AvailablePin</td>
                                                    <td> @Item.UsedPin </td>
                                                    <td>@Item.TransferPin</td>
                                                    <td>@Item.TotalPin</td>
                                                    <td><a href="/Admin/UnUsedPin?Fk_UserId=@Item.Fk_UserId" class="btn btn-info btn-sm">View</a></td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


