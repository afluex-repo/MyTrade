@model MyTrade.Models.Admin

@{
    ViewBag.Title = "UnUsedPin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("UnUsedPin", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-sm-4">
                                <h4>E-Pin List</h4>
                            </div>
                            <div class="col-sm-4">
                                <a href="/Admin/View" class="btn btn-info btn-sm">Back</a>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Owner ID </label>
                                    @Html.TextBoxFor(m => m.OwnerID, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Registered To ID </label>
                                    @Html.TextBoxFor(m => m.RegisteredTo, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>ePinNo </label>
                                    @Html.TextBoxFor(m => m.ePinNo, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Package  </label>
                                    @Html.DropDownListFor(m => m.Package, new SelectList(ViewBag.ddlProduct, "Value", "Text"), new { @class = "form-control", @onchange = "FillAmount();" })
                                </div>
                            </div>

                        </div>
                        <div class="row">
                           
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <br />
                                    <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" />
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area br-6">

                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>E-Pin No</th>
                                        <th>Package</th>
                                        <th>Owner</th>
                                        <th>Created Date</th>
                                        <th>Registered To</th>
                                        <th class="dt-no-sorting">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstunusedpins != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstunusedpins)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.ePinNo</td>
                                                    <td>@Item.Package</td>
                                                    <td> @Item.DisplayName</td>
                                                    <td>@Item.AddedOn</td>
                                                    <td> @Item.RegisteredTo </td>
                                                    <td>@Item.Status</td>
                                                </tr>
                                                i++;
                                            }

                                        }
                                    }

                                </tbody>

                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
