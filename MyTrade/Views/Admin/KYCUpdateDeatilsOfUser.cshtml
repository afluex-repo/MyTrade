@model MyTrade.Models.Admin

@{
    ViewBag.Title = "KYCUpdateDeatilsOfUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("KYCUpdateDeatilsOfUser", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>KYC Update Details</h4>
                                <p style="color:red;">@TempData["verify"]</p>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <input type="hidden" id="Fk_UserId" name="Fk_UserId" value="@Model.Fk_UserId" />
                            @*<div class="col-lg-3">
                                    <div class="form-group">
                                        <label>Login Id  </label>
                                        @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "Login Id" })
                                    </div>
                                </div>*@

                            @*<div class="col-lg-3">
                                    <div class="form-group">
                                        <br />
                                        <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" style="margin-top:15px;" />
                                    </div>
                                </div>*@
                        </div>
                        <div class="widget-content widget-content-area br-6">

                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Name</th>
                                        <th>Acc No</th>
                                        <th>IFSC Code</th>
                                        <th>Bank Name</th>
                                        <th>Branch Name</th>
                                        <th>Nominee Name</th>
                                        <th>Nominee Age</th>
                                        <th>Nominee Relation</th>
                                        <th>UPIID</th>
                                        <th>Adhar Number</th>
                                        <th>Pan Number</th>
                                        <th>Pan Image</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstKycUpdate != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstKycUpdate)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.Name</td>
                                                    <td>@Item.MemberAccNo</td>
                                                    <td>@Item.IFSCCode</td>
                                                    <td>@Item.BankName</td>
                                                    <td>@Item.BankBranch</td>
                                                    <td>@Item.NomineeName</td>
                                                    <td>@Item.NomineeAge</td>
                                                    <td>@Item.NomineeRelation</td>
                                                    <td>@Item.UPIID</td>
                                                    <td>@Item.AdharNo</td>
                                                    <td>@Item.PanNo</td>
                                                    <td><img src="@Item.PanImage" height="100" width="100" /></td>

                                                    @if (Item.IsVerified == "False")
                                                    {
                                                        <td>
                                                            <a href="/AdminReports/ViewProfileVeriFy?Id=@Item.Fk_UserId" name="Verify" id="Verify" class="btn btn-success">Verify</a>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                      <td><span>Verified</span></td>
                                                    }
                                          
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



