@model MyTrade.Models.AssociateBooking

@{
    ViewBag.Title = "AssociateTreeForAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("AssociateTreeForAdmin", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Direct List</h4>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <!-- HTML5 Export Buttons table start -->
                                <div class="card">
                                    <div class="card-header table-card-header">

                                    </div>
                                    <div class="card-block">
                                        <div class="row">
                                            <div class="col-md-8">

                                            </div>
                                            <div>
                                                @if (@ViewBag.LoginId != Session["LoginId"].ToString())
                                                {
                                                    <a href="/AdminReports/AssociateTreeForAdmin?AssociateID=@ViewBag.Fk_SponsorId" id="btnDown" class="btn btn-info btn-sm">Back</a>
                                                }
                                            </div>
                                        </div>
                                        <div class="dt-responsive table-responsive">
                                            <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                                <thead>
                                                    <tr>
                                                        <th>S No.</th>
                                                        <th>LoginId</th>
                                                        <th>Name</th>
                                                        <th>Sponsor Id</th>
                                                        <th>Sponsor Name</th>
                                                        <th>Status</th>
                                                        <th>Level</th>
                                                        <th>Activation Date</th>
                                                        <th></th>

                                                        @*<th>S No.</th>
                                                            <th></th>
                                                            <th>Sponsor Id</th>
                                                            <th>Sponsor Name</th>
                                                            <th>LoginId</th>
                                                            <th>Name</th>
                                                            <th>Status</th>
                                                            <th>Activation Date</th>*@
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model != null)
                                                    {
                                                        if (Model.lstPlot != null)
                                                        {
                                                            int i = 1;
                                                            foreach (var Item in Model.lstPlot)
                                                            {
                                                                <tr class="text-left">
                                                                    <td>@i</td>
                                                                    <td>@Item.LoginId</td>
                                                                    <td>@Item.FirstName</td>
                                                                    <td>@Item.SponsorID</td>
                                                                    <td>@Item.SponsorName</td>

                                                                    <td>
                                                                        @if (Item.ActiveStatus == "Inactive")
                                                                        {
                                                                            <a href="#" id="btnDown" class="label label-danger">@Item.ActiveStatus</a>
                                                                        }
                                                                        else
                                                                        {
                                                                            <a href="#" id="btnDown" class="label label-success">@Item.ActiveStatus</a>
                                                                        }

                                                                    </td>
                                                                    <td>@Item.Lvl</td>
                                                                    <td>@Item.ActivationDate</td>
                                                                    <td>
                                                                        @if (Item.Status == "Down")
                                                                        {

                                                                            <a href="/AdminReports/AssociateTreeForAdmin?AssociateID=@Item.Fk_UserId" id="btnDown" class="btn btn-primary btn-sm">Next</a>
                                                                        }
                                                                        else
                                                                        {
                                                                            @*<a href="#" id="btnDown" class="btn btn-success btn-sm">Self</a>*@
                                                                        }


                                                                    </td>
                                                                </tr>
                                                                i++;
                                                            }
                                                        }
                                                    }
                                                </tbody>
                                                @*<tfoot>
                                                        <tr>
                                                            <th>S No.</th>
                                                            <th>LoginId</th>
                                                            <th>Name</th>
                                                            <th>Sponsor Id</th>
                                                            <th>Sponsor Name</th>
                                                            <th>Status</th>
                                                            <th>Activation Date</th>
                                                            <th></th>
                                                        </tr>
                                                    </tfoot>*@
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
